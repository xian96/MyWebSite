<%- include("../partials/header") %>

<div class="container">
	<!-- <div class="row"> -->
		<div class="row">
			<h1>
				Create a new campground
			</h1>
		</div>
		
		<div class="row">
			<div>
				<form action = "/campgrounds" method = "POST">
					<div class="form-group">
						name:
						<input class="form-control" type="text" name="name" value="Default name of campground">
					</div>
					<div class="form-group">
						price($):
						<input class="form-control" type="number" name="price" value="82" step="0.01">
					</div>
					<div class="form-group">
						image url:
						<input class="form-control" type="text" name="image" value="https://cdn.pixabay.com/photo/2018/12/24/22/19/camping-3893587_1280.jpg">
						<!-- image: "https://cdn.pixabay.com/photo/2016/11/21/14/31/vw-bus-1845719_1280.jpg"
						image: "https://cdn.pixabay.com/photo/2016/11/22/23/08/adventure-1851092_1280.jpg"
 -->
					</div>
					<div class="form-group">
						description:
						<input class="form-control" type="text" name="description" value="Default description of campground">
					</div>
					<div class="form-group">
						<button class="btn btn-lg btn-primary btn-block">
							submit!
						</button>
					</div>
				</form>
			</div>
		</div>

		<div class="row">
			<a href="/campgrounds">
				back to viw all
			</a>	
		</div>

	<!-- </div> -->

</div>

